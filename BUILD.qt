cc_library(
    name = "qt_core",
    hdrs = glob(["usr/include/x86_64-linux-gnu/qt5/QtCore/**"]),
    includes = ["usr/include/x86_64-linux-gnu/qt5"],
    srcs = ["usr/lib/x86_64-linux-gnu/libQt5Core.so"],
    linkopts = [
        "-lQt5Core",
    ],
    visibility = ["//visibility:public"],
)

cc_library(
    name = "qt_widgets",
    hdrs = glob(["usr/include/x86_64-linux-gnu/qt5/QtWidgets/**"]),
    includes = ["usr/include/x86_64-linux-gnu/qt5"],
    srcs = ["usr/lib/x86_64-linux-gnu/libQt5Widgets.so"],
    deps = [":qt_core"],
    linkopts = [
        "-lQt5Widgets",
    ],
    visibility = ["//visibility:public"],
)

cc_library(
    name = "qt_gui",
    hdrs = glob(["usr/include/x86_64-linux-gnu/qt5/QtGui/**"]),
    includes = ["usr/include/x86_64-linux-gnu/qt5"],
    srcs = ["usr/lib/x86_64-linux-gnu/libQt5Gui.so"],
    deps = [":qt_core"],
    linkopts = [
        "-lQt5Gui",
    ],
    visibility = ["//visibility:public"],
)
